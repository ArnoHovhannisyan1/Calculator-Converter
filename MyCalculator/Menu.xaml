<Window x:Class="MyCalculator.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCalculator"
        mc:Ignorable="d"
        Title="Menu"  Background="Black" Height="550" Width="400" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>

            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>

            <RowDefinition Height="60"/>

            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row ="0" Text="Menu" FontFamily="impact"  FontSize="50" Foreground="DarkOrange" TextAlignment="Center" />
        <Button Grid.Row ="2" Content="Calculator" FontFamily="georgia"   FontSize="30" Background="Black"
                Foreground="DarkOrange"  Height="50" Width="250" Margin="75,5,75,5"
                Click="Button_Click"/>
        <Button Grid.Row ="3" Content="Converter" FontFamily="georgia"   FontSize="30" Background="Black"
                Foreground="DarkOrange"  Height="50" Width="250" Margin="75,5,75,5"
                Click="Button_Click_1"/>
    </Grid>
</Window>
